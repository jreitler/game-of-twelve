        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@id/summary_entry_score_2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_entry_score_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/summary_table_header_score4"
        android:textAlignment="center"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@id/summary_entry_score_3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_entry_score_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
