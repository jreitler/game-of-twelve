<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/table_row_padding">

    <TextView
        android:id="@+id/summary_entry_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:text="@string/summary_table_header_name"
        android:textAlignment="center"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_entry_score_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="@string/summary_table_header_score1"
        android:textAlignment="center"
        android:textSize="@dimen/text_size"
        app:layout_constraintStart_toEndOf="@id/summary_entry_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/summary_entry_score_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
