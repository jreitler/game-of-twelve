<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_playerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/button_nextPlayer"
        app:layout_constraintStart_toEndOf="@id/button_undo"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/default_padding"
        android:layout_margin="@dimen/default_margin"/>

    <Button
        android:id="@+id/button_undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/undo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_playerName"
        android:padding="@dimen/default_padding"
        android:layout_margin="@dimen/default_margin"/>

    <Button
        android:id="@+id/button_nextPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_next_player"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game_playerName"
        android:padding="@dimen/default_padding"
        android:layout_margin="@dimen/default_margin"/>

    <Button
        android:id="@+id/button_1"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1:0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_2"
        app:layout_constraintTop_toBottomOf="@+id/game_playerName"
        app:layout_constraintBottom_toTopOf="@id/button_5"
        android:layout_marginBottom="@dimen/button_padding_bottom" />

    <Button
        android:id="@+id/button_2"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2: 0"
        app:layout_constraintStart_toEndOf="@+id/button_1"
        app:layout_constraintEnd_toStartOf="@id/button_3"
        app:layout_constraintTop_toBottomOf="@+id/game_playerName"
        app:layout_constraintBottom_toTopOf="@id/button_6"/>

    <Button
        android:id="@+id/button_3"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3: 0"
        app:layout_constraintStart_toEndOf="@+id/button_2"
        app:layout_constraintEnd_toStartOf="@id/button_4"
        app:layout_constraintTop_toBottomOf="@+id/game_playerName"
        app:layout_constraintBottom_toTopOf="@id/button_7"/>

    <Button
        android:id="@+id/button_4"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4: 0"
        app:layout_constraintStart_toEndOf="@+id/button_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_playerName"
        app:layout_constraintBottom_toTopOf="@id/button_8"/>

    <Button
        android:id="@+id/button_5"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5: 0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_6"
        app:layout_constraintTop_toBottomOf="@+id/button_1"
        app:layout_constraintBottom_toTopOf="@id/button_9"/>

    <Button
        android:id="@+id/button_6"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6: 0"
        app:layout_constraintBottom_toTopOf="@+id/button_10"
        app:layout_constraintEnd_toStartOf="@+id/button_7"
        app:layout_constraintStart_toEndOf="@+id/button_5"
        app:layout_constraintTop_toBottomOf="@+id/button_2" />

    <Button
        android:id="@+id/button_7"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7: 0"
        app:layout_constraintBottom_toTopOf="@+id/button_11"
        app:layout_constraintEnd_toStartOf="@+id/button_8"
        app:layout_constraintStart_toEndOf="@+id/button_6"
        app:layout_constraintTop_toBottomOf="@+id/button_3" />

    <Button
        android:id="@+id/button_8"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/table_row_padding"
        android:text="8: 0"
        app:layout_constraintBottom_toTopOf="@+id/button_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_7"
        app:layout_constraintTop_toBottomOf="@+id/button_4" />

    <Button
        android:id="@+id/button_9"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_5" />

    <Button
        android:id="@+id/button_10"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="10: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_11"
        app:layout_constraintStart_toEndOf="@+id/button_9"
        app:layout_constraintTop_toBottomOf="@+id/button_6" />

    <Button
        android:id="@+id/button_11"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="11: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_12"
        app:layout_constraintStart_toEndOf="@+id/button_10"
        app:layout_constraintTop_toBottomOf="@+id/button_7" />

    <Button
        android:id="@+id/button_12"
        style="@style/game_primary_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="12: 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_11"
        app:layout_constraintTop_toBottomOf="@+id/button_8" />


</androidx.constraintlayout.widget.ConstraintLayout>